include ../_mixins/jademin

block vars
  //- defaults â€“ `append vars` to modify
  -var title = 'Blackcoin Platform and API';
  -var description = 'A powerful, modular node for blackcoin and blockchain-based apps.';
  -var appleTouchTitle = 'Blackcore';
  -var appleTouchIcon = 'apple-touch-icon-precomposed.png';
  -var androidIcon = '/images/touch/chrome-touch-icon-192x192.png';
  -var wintileIcon = '/images/touch/ms-touch-icon-144x144-precomposed.png';
  -var wintileColor = '#F9AB3D';
  -var bodyClass = '';

doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    block title
      title #{title} | Blackcore

    block meta
      meta(name='description', content='#{description}')


    // Add to homescreen for Chrome on Android
    meta(name='mobile-web-app-capable', content='yes')
    link(rel='icon', sizes='192x192', href='#{androidIcon}')

    // Add to homescreen for Safari on iOS
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='apple-mobile-web-app-status-bar-style', content='black')
    meta(name='apple-mobile-web-app-title', content='#{appleTouchTitle}')
    link(rel='apple-touch-icon-precomposed', href='#{appleTouchIcon}')

    // Tile icon for Win8 (144x144 + tile color)
    meta(name='msapplication-TileImage', content='#{wintileIcon}')
    meta(name='msapplication-TileColor', content='#{wintileColor}')
    
    // Favicon
    link(rel="shortcut icon", href="/favicon.ico")
    
    link(rel='stylesheet', href='/styles/main.css' data-instant-track)
    link(href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,300,300italic,400italic,600,700,700italic,600italic|Titillium+Web:400,300,700' rel='stylesheet' type='text/css')
    include ../_includes/scripts.html
    
    meta(name='google-site-verification' content='GOfbzCpKO__Imdru-L0nG1Fo9tTvyH3QVAIWsYO9rCk')

  body(class="#{bodyClass}")
    
    block body
      include ../_includes/top-nav
      block page

    block footer
      include ../_includes/footer
  
    a.exit-off-canvas
    
    block scripts
      +jademin('/scripts/main.min.js')
        script(src='/jquery/dist/jquery.js')
        script(src='/instantclick/instantclick.js')
        script(src='/prism/prism.js')
        script(src='/bootstrap/dist/js/bootstrap.js')
        script(src='/_scripts/init.js')
